<div class="container">
  <h1>This is the index page</h1>

  <table class="highlight centered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.date %></td>
          <td><%= blog.body %></td>
          <td class="btn teal lighten-4"><%= link_to 'Show', blog %></td>
          <% if current_user.id == blog.user_id || logged_in?(:admin) %>
            <td class="btn teal lighten-4"><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td class="btn teal lighten-4"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <p class="btn teal lighten-4"><%= link_to 'New Blog', new_blog_path %></p> <br>
  <%= paginate @blogs %>
</div>  
