<div class="container">
  <h1>This is the index page</h1>

  <table class="highlight centered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="blogs">
      <%= render @blogs %>
    </tbody>
  </table>
  <br>

  <p class="btn teal lighten-4"><%= link_to 'New Blog', new_blog_path %></p> <br>
  <div id="paginator">
    <%= paginate @blogs, remote: true %>
  </div>
</div>  
